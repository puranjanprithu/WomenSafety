<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#D14B4B"
    android:orientation="vertical"
    tools:context=".var_get">

    <Button
        android:id="@+id/var_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:background="@drawable/rounded_corners"
        android:textColor="#fff"
        android:text="GO back"
        />
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#F15353"
        android:gravity="center"
        android:orientation="horizontal"
        tools:visibility="visible">

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_marginStart="0dp"
                android:gravity="center"
                android:text=" Will Help :  "
                android:textColor="@color/common_google_signin_btn_text_dark_default"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/number_save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:gravity="center"
                android:hint="Number"
                android:text="-----"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_marginStart="0dp"
                android:gravity="center"
                android:text=" Said Safe :"
                android:textColor="@color/common_google_signin_btn_text_dark_default"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/SafeNumber_save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:gravity="center"
                android:hint="Number"
                android:text="-----"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_save"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_baseline_account_circle_24" />

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Name"
                android:text=""
                android:textColor="#000"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/age_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Age"
                android:textColor="#000"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/uniqueid_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Unique ID"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="44dp"

        android:layout_gravity="center"
android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/iWillHelp"
            android:layout_width="178dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_corners"
            android:text="I will Help"
            android:textAllCaps="false"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="18dp" />

        <Button
            android:id="@+id/refresh_save"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_corners"
            android:text="Mark Safe"
            android:textAllCaps="false"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="18dp" />




    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/distanceAndDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Distance Between You and Victim"
            android:textAlignment="center"
            android:textAllCaps="false"

            android:textSize="20dp" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click on the Link Below to Get the Current Location:"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_margin="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Current Location"
        android:textSize="20sp"
        android:id="@+id/go_to_link"
        android:background="@color/quantum_googgreen"
        android:textColor="#fff"
        android:layout_margin="10dp"
        android:autoLink="web"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/puranjanTextView"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>


</LinearLayout>